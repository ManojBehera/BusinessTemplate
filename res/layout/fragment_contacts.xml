<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin_larger"
        android:paddingRight="@dimen/activity_horizontal_margin_larger"
        android:weightSum="1.0" >

        <RelativeLayout style="@style/LargeTitleAlt" >

            <TextView
                android:id="@+id/share"
                style="@style/LargeTitleLabelAlt2"
                android:layout_centerHorizontal="true"
                android:drawableBottom="@drawable/btn_contact_share"
                android:gravity="center_horizontal"
                android:text="@string/lbl_contact_title" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/descriptions"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_horizontal_margin_larger" >

            <TextView
                android:id="@+id/push_description_1"
                style="@style/Title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/default_view_spacing"
                android:gravity="center_horizontal"
                android:text="@string/lbl_contact_description_1" />
        </RelativeLayout>

        <!--
             <ImageView
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/prompt_notifications_bubble" />
        -->

        <fragment
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="165dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.0"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            class="com.google.android.gms.maps.SupportMapFragment" />

        <RelativeLayout
            android:id="@+id/bottom_bar"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.35"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:weightSum="1.0" >

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.75dip"
                android:layout_alignParentTop="true"
                android:background="@color/divider" />

            <LinearLayout
                android:id="@+id/buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"           
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/button_message"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height2"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_about_email" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8.0dip"
                    android:background="@color/divider"
                    android:layout_marginTop="8.0dip" />

                <ImageButton
                    android:id="@+id/button_call"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height2"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_about_call" />

                <View
                    android:layout_width="1.0dip"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="8.0dip"
                    android:background="@color/divider"
                    android:layout_marginTop="8.0dip" />

                <ImageButton
                    android:id="@+id/button_info"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/btn_height2"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_contact_about" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>